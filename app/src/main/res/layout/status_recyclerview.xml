<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.example.rajrajas.spritle.model.Status_item" />
    </data>
<android.support.constraint.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/Margint_top"
   android:layout_marginBottom="@dimen/Margint_top"
    android:background="@color/whiteColor">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/wolv"
        android:layout_marginLeft="@dimen/Margint_top"
        android:layout_marginStart="@dimen/Margint_top"
        android:layout_marginTop="@dimen/Margint_top"
        app:civ_border_width="1dp"
        app:civ_border_color="#FF000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_name_txt"
        tools:text="Raj"
        android:text="@{item.username}"
        android:textSize="@dimen/Text_size_head_1"
        android:textColor="@color/textColor_dark"
        android:layout_marginLeft="@dimen/Margint_top"
        android:layout_marginStart="@dimen/Margint_top"
        android:layout_marginTop="@dimen/Margint_top"
        app:layout_constraintLeft_toRightOf="@+id/profile_image"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/update_time_txt"
        tools:text="33 mins"
        android:text="@{item.statustime}"
        android:textSize="@dimen/Text_size_normal"
        android:textColor="@color/textColor_dark"
        android:layout_marginLeft="@dimen/Margint_top"
        android:layout_marginStart="@dimen/Margint_top"
        android:layout_marginTop="@dimen/Margint_default"
        app:layout_constraintLeft_toRightOf="@+id/profile_image"
        app:layout_constraintTop_toBottomOf="@+id/user_name_txt"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/update_txt"
        tools:text="Great day start with great coffee"
        android:textSize="@dimen/Text_size_normal"
        android:linksClickable="true"
        android:textColor="@color/textColor_dark"
        android:layout_marginLeft="@dimen/Margint_top"
        android:layout_marginStart="@dimen/Margint_top"
        android:layout_marginTop="@dimen/Margint_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_time_txt"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/like_cnt_txt"
        tools:text="2"
        android:text="@{item.totallikes}"
        android:drawableLeft="@mipmap/heart"
        android:drawableStart="@mipmap/heart"
        android:drawablePadding="@dimen/Margint_default"
        android:textSize="@dimen/Text_size_normal"
        android:textColor="@color/textColor_dark"
        android:layout_marginLeft="@dimen/Margint_top"
        android:layout_marginStart="@dimen/Margint_top"
        android:layout_marginTop="@dimen/Margint_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_txt"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comment_cnt_txt"
        tools:text="3 comments"
        android:text="@{item.totalcomments}"
        android:textSize="@dimen/Text_size_normal"
        android:textColor="@color/textColor_dark"
        android:layout_marginRight="@dimen/Margint_top"
        android:layout_marginEnd="@dimen/Margint_top"
        android:layout_marginTop="@dimen/Margint_top"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_txt"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/horz_line"
        android:layout_marginTop="@dimen/Margint_default"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/like_cnt_txt"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horz_line">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/like_lay"
        android:layout_weight="1"
        android:background="@drawable/white_bg_ripple_effect"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/Margint_top"
        >
<ImageView
    android:layout_width="35dp"
    android:layout_height="35dp"
    android:id="@+id/heart_img"
    android:layout_marginTop="@dimen/Margint_top"
    android:src="@mipmap/heart_black"
   />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Like"
            android:id="@+id/like_text"
            android:layout_marginLeft="@dimen/Margint_top"
            android:layout_gravity="center_vertical"
            android:textColor="@color/textColor_dark"
            android:textSize="@dimen/Text_size_normal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/comment_lay"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="@drawable/white_bg_ripple_effect"
        android:layout_weight="1"
        android:paddingBottom="@dimen/Margint_top"
        >
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/comment_img"
        android:layout_marginTop="@dimen/Margint_top"
        android:src="@mipmap/chat"
       />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comments"
            android:layout_marginLeft="@dimen/Margint_top"
            android:layout_gravity="center_vertical"
            android:textColor="@color/textColor_dark"
            android:textSize="@dimen/Text_size_normal"/>
</LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
    </layout>